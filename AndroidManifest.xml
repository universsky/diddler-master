<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="universsky.diddler" android:versionCode="1" android:versionName="5.2.0">
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="true">
		<activity android:name="com.universsky.diddler.Main" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name="com.universsky.diddler.ItemActivity" android:label="HTTP Request"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.CALL" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		
		<activity android:name="com.universsky.diddler.Options" android:label="Diddler Options"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.CALL" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.universsky.diddler.Reader" android:label="Diddler Reader"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.CALL" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
	</application>
</manifest>